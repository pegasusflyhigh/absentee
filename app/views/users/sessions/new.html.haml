.container
  .card.card-container
    %img#profile-img.profile-img-card{:src => "/avatar.png"}/
    %br/
    .form-signin
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.label :email
          %br/
          = f.email_field :email, placeholder: 'Email address', class: 'form-control', autofocus: true
        .form-group
          = f.label :password, class: "control-label"
          %br/
          = f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off"
        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me, class: "control-label"
        %br/
        .actions
          = f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block btn-signin'
    = render "users/shared/links"
